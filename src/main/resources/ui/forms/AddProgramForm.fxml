<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" styleClass="form-container" fx:controller="com.dev.station.controller.forms.AddProgramFormController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Program Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="programNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Path to Executable:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="programPathField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="center">
        <Button text="Save" fx:id="saveButton" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>