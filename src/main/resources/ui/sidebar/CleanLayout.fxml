<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dev.station.controller.sidebar.CleanController">
    <TabPane fx:id="tabPane" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
             tabClosingPolicy="UNAVAILABLE">

        <Tab fx:id="uniqueTabId1" text="Program Manager 1" styleClass="tab, clickable">
            <ScrollPane fitToWidth="true">
                <VBox spacing="10" styleClass="tab-container">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <ToggleButton fx:id="toggleVariableFolder1" text="Move to recycle bin" onAction="#handleToggleVariableFolder" styleClass="clickable"/>
                    <ToggleButton fx:id="toggleRecycleBinFolder1" text="Return from recycle bin" onAction="#handleToggleRecycleBinFolder" styleClass="clickable"/>
                    <ToggleButton fx:id="toggleClearRecycleBinFolder1" text="Clear recycle bin" onAction="#handleToggleClearRecycleBinFolder" styleClass="clickable"/>
                </VBox>
            </ScrollPane>
        </Tab>

        <Tab fx:id="uniqueTabId2" text="Program Manager 2" styleClass="tab, clickable">
            <ScrollPane fitToWidth="true">
                <VBox spacing="10" styleClass="tab-container">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <ToggleButton fx:id="toggleVariableFolder2" text="Move to recycle bin" onAction="#handleToggleVariableFolder" styleClass="clickable"/>
                    <ToggleButton fx:id="toggleRecycleBinFolder2" text="Return from recycle bin" onAction="#handleToggleRecycleBinFolder" styleClass="clickable"/>
                    <ToggleButton fx:id="toggleClearRecycleBinFolder2" text="Clear recycle bin" onAction="#handleToggleClearRecycleBinFolder" styleClass="clickable"/>
                </VBox>
            </ScrollPane>
        </Tab>
    </TabPane>
</AnchorPane>