<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.ToggleButton?>
<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dev.station.controller.MainController">
    <TabPane fx:id="tabPane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <tabs>
            <Tab text="Program management 1">
                <content>
                    <AnchorPane>
                        <ToggleButton fx:id="togglePhpStorm" text="PhpStorm IDE" onAction="#handleTogglePhpStorm"/>
                    </AnchorPane>
                </content>
            </Tab>
            <Tab text="Program management 2">

            </Tab>
            <Tab text="Settings">
                <content>
                    <fx:include source="SettingsLayout.fxml"/>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</AnchorPane>
